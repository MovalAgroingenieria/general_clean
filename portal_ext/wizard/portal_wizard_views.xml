<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="wizard_view" model="ir.ui.view">
        <field name="name">Portal Access Management</field>
        <field name="model">portal.wizard</field>
        <field name="inherit_id" ref="portal.wizard_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='portal_id']" position="after">
                <field name="send_email"/>
            </xpath>

            <xpath expr="//field[@name='user_ids']/tree" position="inside">
                <field name="autogenerated" readonly="1"/>
            </xpath>

            <xpath expr="//field[@name='email']" position="attributes">
                <attribute name="attrs">{'readonly': [('autogenerated', '=', True)]}</attribute>
            </xpath>
        </field>
    </record>

</odoo>
