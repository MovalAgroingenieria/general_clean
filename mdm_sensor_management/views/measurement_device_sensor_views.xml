<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mdm_sensor_view_form" model="ir.ui.view">
        <field name="name">Device Sensor Form</field>
        <field name="model">mdm.measurement.device.sensor</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="buttons">
                        <button name="action_view_readings"
                                type="object" class="oe_stat_button"
                                icon="fa-list">
                            <field name="sensor_readings" widget="statinfo" string="Readings"/>
                        </button>
                    </div>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="device_id"/>
                        <field name="type_id"/>
                        <field name="uom_id" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="mdm_sensor_view_tree" model="ir.ui.view">
        <field name="name">Device Sensor Tree</field>
        <field name="model">mdm.measurement.device.sensor</field>
        <field name="arch" type="xml">
            <tree class="o_mdm_measurement_device_sensor_tree">
                <field name="name"/>
                <field name="device_id"/>
                <field name="type_id"/>
                <field name="uom_id"/>
            </tree>
        </field>
    </record>

    <record id="mdm_sensor_view_search" model="ir.ui.view">
        <field name="name">Device Sensor Search</field>
        <field name="model">mdm.measurement.device.sensor</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <filter string="Type" name="type_id" context="{'group_by':'type_id'}"/>
            </search>
        </field>
    </record>

    <record id="mdm_sensor_action" model="ir.actions.act_window">
        <field name="name">Sensors</field>
        <field name="res_model">mdm.measurement.device.sensor</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_ids" eval="[
            (5, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('mdm_sensor_view_tree')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('mdm_sensor_view_form')})
        ]"/>
        <field name="search_view_id" ref="mdm_sensor_view_search"/>
    </record>
</odoo>