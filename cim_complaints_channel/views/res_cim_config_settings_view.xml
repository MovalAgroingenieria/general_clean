<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_cim_config_settings_view_form"
            model="ir.ui.view">
        <field name="name">res.cim.config.settings.view.form</field>
        <field name="model">res.cim.config.settings</field>
        <field name="arch" type="xml">
            <form string="Complaints-Management Settings"
                  class="oe_form_configuration">
                <header>
                    <button string="Apply" type="object" name="execute"
                     class="oe_highlight"/>
                    <button string="Cancel" type="object" name="cancel"
                     class="oe_link"/>
                </header>
                <group string="Complaints Channel Management"
                       name="complaints_channel_management_configuration_group">
                    <field name="sequence_complaint_code_id"
                           string="Sequence for the codes"
                           options="{'no_quick_create':True,'no_create_edit':True}"
                           style="width:300px"/>
                    <field name="length_tracking_code"
                           string="Tracking code length"
                           style="width:100px"/>
                    <field name="acknowledgement_period"
                           string="Acknowledgement period (days)"
                           style="width:100px"/>
                    <field name="automatic_email_state"
                           string="Email after change state"/>
                    <field name="automatic_email_validate_com"
                           string="Email after validate communication"/>
                    <field name="automatic_email_complainant_com"
                           string="Send the complainant a copy of your communications"/>
                    <field name="notice_period"
                           string="Notice Period (days)"
                           style="width:100px"/>
                    <field name="deadline"
                           string="Deadline (months)"
                           style="width:100px"/>
                    <field name="deadline_extended"
                           string="Deadline Extended (months)"
                           style="width:100px"/>
                    <field name="email_for_notice"
                           string="E-mail for notice"/>
                </group>
            </form>
        </field>
    </record>

    <record id="res_cim_config_settings_action"
            model="ir.actions.act_window">
        <field name="name">Configure complaints-channel management</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.cim.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
    </record>

    <menuitem id="parameters_menu"
              name="Parameters"
              parent="configuration_menu"
              sequence="1"
              action="res_cim_config_settings_action"
              groups="cim_complaints_channel.group_cim_settings"/>

</odoo>