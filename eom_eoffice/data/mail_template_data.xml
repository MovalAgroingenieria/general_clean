<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>

        <record id="mail_template_notification_validated" model="mail.template">
            <field name="name">Electronic File Notification</field>
            <field name="model_id" ref="eom_eoffice.model_eom_electronicfile_communication"/>
            <field name="subject">Electronic File Notification ${object.name}</field>
            <field name="email_from">${(user.company_id.email) |safe}</field>
            <field name="email_to">${(object.email) |safe}</field>
            <field name="lang">${object.electronicfile_id.partner_id.lang or user.lang or 'en_US'}</field>
            <field name="body_html" type="html">
                <div style="background:#F0F0F0;color:#515166;padding:10px 6px;font-family:Arial,Helvetica,sans-serif;font-size:14px;">
                    <p>Dear user,</p>
                    <p>You have received a new communication <b>${object.name}</b> for the Electronic File <b>${object.electronicfile_id.name}</b>.</p>
                    <br/>
                    <p>Visit our Electronic Office to review this communication and the status of the File.</p>
                    <p>Thank you.</p>
                </div>
            </field>
            <field name="auto_delete" eval="True"/>
        </record>


        <record id="mail_template_notice" model="mail.template">
            <field name="name">Send notice related to a electronic file creation</field>
            <field name="model_id"
                   ref="eom_eoffice.model_eom_electronicfile_communication"/>
            <field name="subject">Electronic office, new communication: Communication ${object.electronicfile_id.name}
            </field>
            <field name="email_from">${object.electronicfile_id.company_id.email}</field>
            <field name="email_to">${ctx.param_email}</field>
            <field name="lang">es_ES</field>
            <field name="body_html" type="html">
                <div style="background:#F0F0F0;color:#515166;padding:10px 0px;font-family:Arial,Helvetica,sans-serif;font-size:14px;">
                    <p>There is a new electronic file creation.</p>
                    <p>FILE NAME: ${object.electronicfile_id.name}</p>
                    <p>URL: <a href="${ctx.get('link')}" target="_blank">${ctx.get('link')}</a></p>
                </div>
            </field>
            <field name="auto_delete" eval="True"/>
        </record>

    </data>

</odoo>