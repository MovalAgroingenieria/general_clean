<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_product_submaterial_tree" model="ir.ui.view">
        <field name="name">view.product.submaterial.tree</field>
        <field name="model">product.submaterial</field>
        <field name="arch" type="xml">
            <tree>
                <field name="code" />
                <field name="material_id" />
                <field name="name" />
            </tree>
        </field>
    </record>
    <record id="view_product_submaterial_form" model="ir.ui.view">
        <field name="name">view.product.submaterial.form</field>
        <field name="model">product.submaterial</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title" style="width:100%;">
                        <label for="name" class="oe_edit_only" />
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group name="header">
                        <field name="code" style="width:40%;" />
                        <field name="material_id" style="width:40%;" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_product_submaterial_search" model="ir.ui.view">
        <field name="name">view.product.submaterial.search</field>
        <field name="model">product.submaterial</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" filter_domain="[('name','ilike',self)]" string="Submaterial" />
                <field name="code" />
                <field name="material_id" />
            </search>
        </field>
    </record>
    <record id="action_product_submaterial" model="ir.actions.act_window">
        <field name="name">Submaterial</field>
        <field name="res_model">product.submaterial</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
