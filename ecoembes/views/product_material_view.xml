<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="view_product_material_tree" model="ir.ui.view">
        <field name="name">view.product.material.tree</field>
        <field name="model">product.material</field>
        <field name="arch" type="xml">
            <tree>
                <field name="code" />
                <field name="name" />
            </tree>
        </field>
    </record>

    <record id="view_product_material_form" model="ir.ui.view">
        <field name="name">view.product.material.form</field>
        <field name="model">product.material</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title" style="width:100%;">
                        <label for="name" class="oe_edit_only" />
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group name="header">
                        <field name="code" style="width:40%;" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_product_material_search" model="ir.ui.view">
        <field name="name">view.product.material.search</field>
        <field name="model">product.material</field>
        <field name="arch" type="xml">
            <search string="Search productMaterial">
                <field name="name" filter_domain="[('name','ilike',self)]" string="Material" />
                <field name="code" />
            </search>
        </field>
    </record>

    <record id="action_product_material" model="ir.actions.act_window">
        <field name="name">Material</field>
        <field name="res_model">product.material</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
