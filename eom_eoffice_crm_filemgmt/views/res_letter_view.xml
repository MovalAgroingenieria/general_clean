<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="res_letter_filter" model="ir.ui.view">
        <field name="name">Letter Search</field>
        <field name="model">res.letter</field>
        <field name="inherit_id" ref="crm_lettermgmt.res_letter_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='pending']" position="after">
                <separator/>
                <filter string="Created by Auth DNIe: Yes" name="created_by_authdnie_yes"
                    domain="[('created_by_authdnie','=',True)]"/>
                 <filter string="Created by Auth DNIe: No" name="created_by_authdnie_no"
                    domain="[('created_by_authdnie','=',False)]"/>
            </xpath>
        </field>
    </record>

    <record id="res_letter_form_view_inherit_company" model="ir.ui.view">
        <field name="name">res.letter.form.inherit.company</field>
        <field name="model">res.letter</field>
        <field name="inherit_id" ref="crm_lettermgmt.res_letter_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='subject']" position="after">
                <field name="company_id"/>
            </xpath>
        </field>
    </record>

</odoo>
