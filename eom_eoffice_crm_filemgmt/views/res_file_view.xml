<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_file_view_search" model="ir.ui.view">
        <field name="name">Files (search view)</field>
        <field name="model">res.file</field>
        <field name="inherit_id" ref="crm_filemgmt.res_file_view_search"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='technician_no']" position="after">
                <separator/>
                <filter string="With Electronic File: Yes" name="associatedelectronicfile_yes"
                    domain="[('has_associated_electronicfile','=',True)]"/>
                <filter string="With Electronic File: No" name="associatedelectronicfile_yes"
                    domain="[('has_associated_electronicfile','=',False)]"/>
            </xpath>
        </field>
    </record>

    <record id="res_file_view_form_inherit_company" model="ir.ui.view">
        <field name="name">res.file.form.inherit.company</field>
        <field name="model">res.file</field>
        <field name="inherit_id" ref="crm_filemgmt.res_file_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='category_id']" position="after">
                <field name="company_id" colspan="4"
                                   attrs="{'readonly':['|',('is_closing_stage','=', True),('is_blocked','=',True)]}"/>
            </xpath>
        </field>
    </record>

</odoo>