<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Form view -->
    <record id="sit_gtt_bank_payment_line_form" model="ir.ui.view">
        <field name="name">sit_gtt.bank.payment.line.form</field>
        <field name="model">bank.payment.line</field>
        <field name="inherit_id" ref="account_payment_order.bank_payment_line_form"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
               <field name="sit_gtt_ref"/>
               <field name="sit_gtt_sent"/>
            </field>
        </field>
    </record>

    <!-- Tree view -->
    <record id="sit_gtt_bank_payment_line_tree" model="ir.ui.view">
        <field name="name">sit_gtt.bank.payment.line.tree</field>
        <field name="model">bank.payment.line</field>
        <field name="inherit_id" ref="account_payment_order.bank_payment_line_tree"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
               <field name="sit_gtt_ref"/>
               <field name="sit_gtt_sent" invisible="1"/>
            </field>
        </field>
    </record>

    <!-- Search view -->
    <record id="sit_gtt_payment_line_search" model="ir.ui.view">
        <field name="name">sit_gtt.payment.line.search</field>
        <field name="model">bank.payment.line</field>
        <field name="inherit_id" ref="account_payment_order.bank_payment_line_search"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
               <field name="sit_gtt_ref"/>
               <field name="sit_gtt_sent"/>
               <filter name="sit_gtt_filter" string="SIT GTT" domain="[('sit_gtt_sent','=', True)]"/>
            </field>
        </field>
    </record>

</odoo>