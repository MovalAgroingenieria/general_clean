<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Account config setting DipuCR options -->
    <record id="account_config_settings_dipucr_view" model="ir.ui.view">
        <field name="name">dipucr.account_config_settings.view.form</field>
        <field name="model">account.config.settings</field>
        <field name="inherit_id" ref="account.view_account_config_settings"/>
        <field name="arch" type="xml">
            <xpath expr="//separator[@name='analytic_account']" position="before">
                <group name="dipucr" string="Tax management. Ciudad Real County Council (DipuCR)">
                    <field name="entity_code" widget="selection"/>
                </group>
            </xpath>
        </field>
    </record>

    <!-- Add banking debit DipuCR fields to account payment order form -->
    <record id="account_payment_order_form_suma" model="ir.ui.view">
        <field name="name">account.payment.order.form.dipucr</field>
        <field name="model">account.payment.order</field>
        <field name="inherit_id" ref="account_payment_order.account_payment_order_form"/>
        <field name="arch" type="xml">

            <!-- Lock date_prefered field  -->
            <xpath expr="//field[@name='date_prefered']" position="attributes">
                <attribute name="attrs" add="{'readonly':[('payment_mode_name','=', 'DipuCR')]}"/>
            </xpath>

            <!-- Set description as required field -->
            <xpath expr="//field[@name='description']" position="attributes">
                <attribute name="attrs" add="{'required':[('payment_mode_name','=', 'DipuCR')]}"/>
            </xpath>

            <!-- DipuCR options -->
            <xpath expr="//group[@name='head']" position="after">
                <group string="DipuCR options" name="dipucr" col="2" attrs="{'invisible':[('payment_mode_name', '!=', 'DipuCR')]}">
                    <group name="dipucr-left">
                        <field name="payment_mode_name" invisible="1"/>
                        <field name="entity" attrs="{'required':[('payment_mode_name','=', 'DipuCR')]}"/>
                        <field name="error_mode" style="width: 50%;" attrs="{'required':[('payment_mode_name','=', 'DipuCR')]}"/>
                        <field name="charge_type" style="width: 50%;" widget="selection" attrs="{'required':[('payment_mode_name','=', 'DipuCR')]}"/>
                        <field name="value_type" style="width: 50%;" attrs="{'required':[('payment_mode_name','=', 'DipuCR')]}" widget="selection"/>
                        <field name="charge_year" style="width: 50%;" attrs="{'required':[('payment_mode_name','=', 'DipuCR')]}" widget="selection"/>
                    </group>
                    <group name="dipucr-right">
                        <field name="concept" attrs="{'required':[('payment_mode_name','=', 'DipuCR')]}" widget="selection"/>
                        <field name="period" attrs="{'required':[('payment_mode_name','=', 'DipuCR')]}" widget="selection"/>
                        <field name="period_start_date" attrs="{'required':[('payment_mode_name','=', 'DipuCR'),('period', '=', 'SIN PERIODO')],
                                                                'invisible':[('period', '!=', 'SIN PERIODO')]}"/>
                        <field name="period_end_date" attrs="{'required':[('payment_mode_name', '=', 'DipuCR'),('period', '=', 'SIN PERIODO')],
                                                              'invisible':[('period', '!=', 'SIN PERIODO')]}"/>
                        <field name="issue_number" attrs="{'required':[('payment_mode_name','=', 'DipuCR')]}" widget="selection"/>
                        <field name="approval_decree_date" attrs="{'required':[('payment_mode_name','=', 'DipuCR'),('charge_type', '=', 'E')]}"/>
                        <field name="approval_decree_number" attrs="{'required':[('payment_mode_name','=', 'DipuCR'),('charge_type', '=', 'E')]}"/>
                    </group>
                </group>
            </xpath>

            <!-- Add errors tap -->
            <xpath expr="//page[@name='bank-payment-lines']" position="after">
                <page name="errors" string="Errors"
                      attrs="{'invisible':['|',('payment_mode_name', '!=', 'DipuCR'), ('error_mode', '!=', 'permissive')]}">
                    <field name="errors_found" nolabel="1"/>
                </page>
            </xpath>

        </field>
    </record>

</odoo>