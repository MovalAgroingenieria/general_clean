<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data noupdate="0">
        <record id="group_hr_attendance_staff_manager" model="res.groups">
            <field name="name">Staff Manager</field>
            <field name="category_id" ref="base.module_category_hr_attendance"/>
            <field name="implied_ids" eval="[(4, ref('hr.group_hr_attendance'))]"/>
        </record>
        <record id="hr_attendance.group_hr_attendance_user" model="res.groups">
            <field name="name">Officer</field>
            <field name="category_id" ref="base.module_category_hr_attendance"/>
            <field name="implied_ids"
                eval="[(4, ref('hr_attendance_staff_manager.group_hr_attendance_staff_manager'))]"/>
        </record>
    </data>

    <data noupdate="1">
        <record id="hr_attendance_rule_attendance_staff_manager" model="ir.rule">
            <field name="name">staff manager: modify own attendance and its subordinates</field>
            <field name="model_id" ref="model_hr_attendance"/>
            <field name="domain_force">
                ['|', ('employee_id.user_id','=',user.id),
                      ('employee_id', 'in', user.employee_ids[0].child_ids.ids)]
            </field>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="0"/>
            <field name="groups" eval="[(4,ref('hr_attendance_staff_manager.group_hr_attendance_staff_manager'))]"/>
        </record>
    </data>

</odoo>
